<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/space_80dp"
        android:layout_height="@dimen/space_130dp"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginTop="@dimen/space_8dp"
        android:layout_marginEnd="@dimen/space_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/film"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFlyer"
        android:layout_width="@dimen/space_80dp"
        android:layout_height="@dimen/space_130dp"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginTop="@dimen/space_8dp"
        android:layout_marginEnd="@dimen/space_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <co.instaflix.config.view.font.FuturaLight
        android:id="@+id/tvNameContent"
        android:layout_width="@dimen/space_80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_14sp"
        app:layout_constraintEnd_toEndOf="@+id/ivFlyer"
        app:layout_constraintStart_toStartOf="@+id/ivFlyer"
        app:layout_constraintTop_toBottomOf="@+id/ivFlyer" />



</androidx.constraintlayout.widget.ConstraintLayout>